{%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %}
<ol reversed class="postlist">
{% for post in postslist | reverse %}
	<li class="my-6 flex flex-col gap-1">
		<time class="text-xs text-slate-500 dark:text-slate-400" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
		<a href="{{ post.url }}" class="text-xl text-slate-700 dark:text-slate-200 hover:text-slate-500 dark:hover:text-slate-400 hover:underline underline-offset-4 decoration-4 hover:decoration-slate-400 dark:hover:decoration-slate-500">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
	</li>
{% endfor %}
</ol>
